{
    "name": "try-again-later/pup",
    "description": "A small PHP library for value parsing and validation inspired by yup.",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "test": "phpunit --do-not-cache-result",
        "lint": "phpstan analyse -c ./phpstan.neon src tests"
    },
    "autoload": {
        "psr-4": {
            "TryAgainLater\\Pup\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "phpstan/phpstan": "^2.1"
    }
}
